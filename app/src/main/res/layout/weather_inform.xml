<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Data information"
        android:id="@+id/date_id"
        android:textSize="20sp"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/city_id"
        android:layout_alignStart="@+id/city_id"
        android:layout_marginTop="53dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="City"
        android:textSize="30sp"
        android:id="@+id/city_id"
        android:textStyle="normal"


        android:layout_marginLeft="35dp"
        android:layout_marginStart="35dp"
        android:layout_marginTop="104dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Condition"
        android:id="@+id/cond_id"
        android:textSize="20sp"

        android:layout_below="@+id/textView3"
        android:layout_alignLeft="@+id/city_id"
        android:layout_alignStart="@+id/city_id"
        android:layout_marginTop="37dp" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tempr"
        android:id="@+id/temp_id"
        android:textSize="20sp"


        android:layout_marginTop="27dp"
        android:layout_below="@+id/city_id"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="70dp"
        android:layout_marginEnd="70dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Temperature:"
        android:id="@+id/textView3"

        android:textSize="20sp"
        android:layout_alignTop="@+id/temp_id"
        android:layout_alignLeft="@+id/city_id"
        android:layout_alignStart="@+id/city_id" />


</RelativeLayout>
